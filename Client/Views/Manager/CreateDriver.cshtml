@model Client.ViewModels.Manager.DriverVM
@{
    ViewBag.Title = "Hire user as driver";
    ViewBag.Cars = Client.Controllers.ManagerController.getCarList();
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("CreateDriver", "Manager", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.UserDetails.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserDetails.FirstName, new { @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UserDetails.LastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserDetails.LastName, new { @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UserDetails.MiddleName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserDetails.MiddleName, new { @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UserDetails.BirthDate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserDetails.BirthDate, new { @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Cars", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.CarID, Client.Controllers.ManagerController.getCarSelectList())
            @*<select name="@Html.NameFor(u => u.Car)" class="selectpicker" style="height: 30px">
                <option disabled selected>Choose a car</option>
                @foreach (Client.ViewModels.Manager.CarVM car in Client.Controllers.ManagerController.getCarList())
                {
                    <option label="@car.CarMark @car.CarModel, @car.CarColor" value="@car" />
                }
            </select>*@
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
